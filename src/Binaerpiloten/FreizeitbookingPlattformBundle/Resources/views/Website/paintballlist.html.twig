{% extends 'BinaerpilotenFreizeitbookingPlattformBundle:Website:abstractlist.html.twig' %}

{% block heading %}Paintball{% endblock %}

{% block menuregions %}
    {% for menuregion in regions['paintball'] %}
        <li><a href="{{ path('paintballlist',{'regionURLName': menuregion.getURLName}) }}">{{ menuregion.getName }}</a></li>
    {% endfor %}
{% endblock %}

{% block providerinfo %}
<div class="col-xs-12">
    <h2>{{ provider.name }}</h2>
</div>
<div class="col-md-4">
    <p>Preis: {{ provider.price }} €</p>
    <p>Indoor-Felder: {{ provider.indoorFieldCount }}</p>
    <p>Outdoor-Felder: {{ provider.outdoorFieldCount }}</p>
</div>
<div class="col-md-4">
    <p>{{ provider.street }}<br>{{ provider.zip }} {{ provider.city }}</p>
</div>
<div class="col-md-4">
    <p><a href="{{ path('paintballdetails',{'regionURLName': region.getURLName, 'id': provider.getId}) }}" class="btn btn-primary btn-large">Jetzt Reservierung anfragen</a></p>
</div>
{% endblock %}

{% block adminbutton %}
    <a href="{{ path('paintballprovider',{'region': region.getURLName}) }}">Liste bearbeiten</a>
{% endblock %}

{% block bannersrc %}{{ asset('bundles/freizeitbookingplattform/img/paintball.jpg') }}{% endblock %}
{% set bannertext = 'Paintball macht Spaß!' %}
