{% extends 'BinaerpilotenFreizeitbookingPlattformBundle:Website:abstractlist.html.twig' %}

{% block heading %}Gokart{% endblock %}

{% block menuregions %}
    {% for menuregion in regions['gokart'] %}
        <li><a href="{{ path('gokartlist',{'regionURLName': menuregion.getURLName}) }}">{{ menuregion.getName }}</a></li>
    {% endfor %}
{% endblock %}

{% block providerinfo %}
<div class="col-xs-12">
    <h2>{{ provider.name }}</h2>
</div>
<div class="col-md-4">
    <p>Preis: {{ provider.price }}</p>
    <p>Streckenlänge: {{ provider.length }}</p>
</div>
<div class="col-md-4">
    <p>{{ provider.street }}<br>{{ provider.zip }} {{ provider.city }}</p>
</div>
<div class="col-md-4">
    <p><a href="{{ path('gokartdetails',{'regionURLName': region.getURLName, 'id': provider.getId}) }}" class="btn btn-primary btn-large">Jetzt Reservierung anfragen</a></p>
</div>
{% endblock %}

{% block adminbutton %}
    <a href="{{ path('gokartprovider',{'region': region.getURLName}) }}">Liste bearbeiten</a>
{% endblock %}

{% block bannersrc %}{{ asset('bundles/freizeitbookingplattform/img/gokart.jpg') }}{% endblock %}
{% set bannertext = 'Gokart macht Spaß!' %}
