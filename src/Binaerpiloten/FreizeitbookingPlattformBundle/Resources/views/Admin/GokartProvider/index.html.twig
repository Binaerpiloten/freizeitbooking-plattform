{% extends 'BinaerpilotenFreizeitbookingPlattformBundle:Admin:backend-base.html.twig' %}

{% block body -%}
    <h1>Gokart-Anbieter {% if app.request.get('region') %}<small>filter: {{ app.request.get('region') }}</small>{% endif %}</h1>

    <table class="records_list table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Street</th>
                <th>Zip</th>
                <th>City</th>
                <th>Price</th>
                <th>Telephone</th>
                <th>Image</th>
                <th>Length</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('gokartprovider_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.street }}</td>
                <td>{{ entity.zip }}</td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.price }}</td>
                <td>{{ entity.telephone }}</td>
                <td>{{ entity.image }}</td>
                <td>{{ entity.length }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('gokartprovider_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('gokartprovider_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('gokartprovider_new') }}" class='btn btn-primary' type='button'>
        Create a new entry
    </a>
    {% endblock %}
